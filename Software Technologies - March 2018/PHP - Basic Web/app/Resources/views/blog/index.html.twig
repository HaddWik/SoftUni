{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div><center><img src="{{ asset('img/logo.png') }}" alt="Software University Logo"></center></div>
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12">
                    <div class="well">
                        <article>
                            <header>
                                <h2>{{ article.title }}</h2>
                            </header>

                            <p>
                                {{ article.summary }}
                            </p>

                            <small class="author">
                                Posted by &ldquo;<i>{{ article.author }}</i>&rdquo;<br>
                                Posted on {{ article.articledate }}
                            </small>

                            <footer>
                                <div class="pull-right">
                                    <a class="btn btn-primary btn-xs" href="{{ path('article_view',{'id':article.id}) }}">Read more &raquo;</a>
                                </div>

                                {% if app.user %}
                                    <div class="pull-left">
                                        <a class="btn btn-info btn-xs" href="{{ path('article_edit',{'id':article.id}) }}">Edit</a>
                                        &nbsp;
                                        <a class="btn btn-danger btn-xs" href="{{ path('article_delete',{'id':article.id}) }}">Delete</a>
                                    </div>
                                {% endif %}
                            </footer>
                        </article>
                        <br><br>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
